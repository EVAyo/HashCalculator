<Window
    x:Class="HashCalculator.SettingsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HashCalculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="设置"
    Width="360"
    Height="240"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="8,4,8,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <CheckBox
            x:Name="uiCheckBox_RemMainWinPos"
            Margin="0,0,0,4"
            Padding="4,0,0,0"
            Click="CheckBox_RemMainWinPos_Click"
            Content="记住主窗口关闭时的位置" />
        <CheckBox
            x:Name="uiCheckBox_RembMainSize"
            Grid.Row="1"
            Margin="0,0,0,4"
            Padding="4,0,0,0"
            Click="CheckBox_RembMainSize_Click"
            Content="记住主窗口关闭时的大小" />
        <Grid
            Grid.Row="2"
            Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                VerticalAlignment="Center"
                Text="当拖入面板对象包含文件夹时：" />
            <ComboBox
                x:Name="uiComboBox_SearchPolicy"
                Grid.Column="1"
                SelectedIndex="0">
                <ComboBoxItem Content="搜索一代子文件" />
                <ComboBoxItem Content="搜索全部子文件" />
                <ComboBoxItem Content="不搜索该文件夹" />
            </ComboBox>
        </Grid>
        <CheckBox
            x:Name="uiCheckBox_UseLowercaseHash"
            Grid.Row="3"
            Margin="0,0,0,4"
            Padding="4,0,0,0"
            Click="CheckBox_UseLowercaseHash_Click"
            Content="计算所得哈希值使用小写字母形式" />
        <Grid
            Grid.Row="4"
            Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                VerticalAlignment="Center"
                Text="同时计算多少个文件的哈希值：" />
            <ComboBox
                x:Name="uiComboBox_SimulCalculate"
                Grid.Column="1"
                SelectedIndex="2">
                <ComboBoxItem Content="1 个 - 大多数文件很大" />
                <ComboBoxItem Content="2 个 - 大多数文件较大" />
                <ComboBoxItem Content="4 个 - 大多数文件较小" />
                <ComboBoxItem Content="8 个 - 大多数文件很小" />
            </ComboBox>
        </Grid>
        <Grid
            Grid.Row="6"
            Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="uiButton_LoadDefault"
                Grid.Column="1"
                Margin="4,0,4,0"
                Padding="16,4,16,4"
                Background="{x:Null}"
                Click="Button_LoadDefault_Click"
                Content="默认" />
            <Button
                x:Name="uiButton_Cancel"
                Grid.Column="2"
                Margin="4,0,4,0"
                Padding="16,4,16,4"
                Background="{x:Null}"
                Click="Button_Cancel_Click"
                Content="关闭"
                IsCancel="True" />
            <Button
                x:Name="uiButton_Apply"
                Grid.Column="3"
                Margin="4,0,0,0"
                Padding="16,4,16,4"
                Background="{x:Null}"
                Click="Button_Apply_Click"
                Content="应用"
                IsDefault="True" />
        </Grid>
    </Grid>
</Window>
