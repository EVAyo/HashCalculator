<Window
    x:Class="HashCalculator.SettingsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HashCalculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="设置"
    Width="300"
    Height="200"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="8,4,8,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <CheckBox
            x:Name="uiCheckBox_RembMainSize"
            Padding="4,0,0,0"
            Click="CheckBox_RembMainSize_Click"
            Content="主窗口关闭时保存窗口尺寸" />
        <Grid Grid.RowSpan="3" />
        <Grid
            Grid.Row="3"
            Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="uiButton_LoadDefault"
                Grid.Column="1"
                Margin="4,0,4,0"
                Padding="16,4,16,4"
                Background="{x:Null}"
                Click="Button_LoadDefault_Click"
                Content="默认" />
            <Button
                x:Name="uiButton_Cancel"
                Grid.Column="2"
                Margin="4,0,4,0"
                Padding="16,4,16,4"
                Background="{x:Null}"
                Click="Button_Cancel_Click"
                Content="取消"
                IsCancel="True" />
            <Button
                x:Name="uiButton_Apply"
                Grid.Column="3"
                Margin="4,0,0,0"
                Padding="16,4,16,4"
                Background="{x:Null}"
                Click="Button_Apply_Click"
                Content="应用"
                IsDefault="True" />
        </Grid>
    </Grid>
</Window>
