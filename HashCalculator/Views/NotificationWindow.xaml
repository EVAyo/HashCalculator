<Window
    x:Class="HashCalculator.NotificationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HashCalculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="通知"
    Width="400"
    Height="240"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SnapsToDevicePixels="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="16,8,16,16">
        <Border
            Padding="8"
            BorderBrush="Gray"
            BorderThickness="1">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="12pt"
                Text="    此版本的 HashCalculator 可能与旧版右键菜单扩展模块不兼容，为保证右键菜单与此版本的 HashCalculator 正确配合，请卸载旧版右键菜单，再使用此版本的安装右键菜单功能重新安装右键菜单！"
                TextWrapping="WrapWithOverflow" />
        </Border>
    </Grid>
</Window>
